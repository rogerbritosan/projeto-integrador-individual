<%- include('partials/header.ejs') %>
<%- include('partials/menu.ejs') %>

<main class="main">

    <%- include('partials/search.ejs') %>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 mb-5 mb-lg-0">

                    <main class="d-flex gap-4 flex-wrap">

                        <section class="col-lead bg-section bg-section-bordered">

                            <h1 class="f18 blue-dark medium mb-4">Edit Profile</h1>

                            <form class="">
                                <fieldset>
                                    <div class="form-group row">
                                        <div class="col">
                                            <picture class="avatar">
                                                <img src="/images/avatar-fake.png" alt="" class="d-block" />
                                            </picture>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <input type="text" class="form-control username" id="name" placeholder="Enter Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <input type="text" class="form-control username" id="username" placeholder="Enter Username">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <input type="tel" class="form-control tel" id="phone" placeholder="Enter Phone Number">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <input type="email" class="form-control email" id="email" placeholder="Enter email">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <input type="password" class="form-control password" id="password" placeholder="Enter password">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col">
                                            <input type="password" class="form-control password" id="passwordConfirm" placeholder="Confirm password">
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="mt-4">
                                    <a href="/edit-profile" class="btn btn-cta mx-auto">Save</a>
                                </div>
                            </form>
                        
                        </section>

                        <aside class="col-aside bg-section bg-section-colored d-none d-lg-flex">
                            <div class="brand">
                                <a href="/" class="d-block">
                                    <img src="/images/brand.svg" alt="Warehouse Super Market Store" />
                                </a>
                            </div>                                    
                        </aside>

                    </main>

                </div>
            </div>
        </div>
    </section>

</main>

<%- include('partials/footer.ejs') %>
